    var userEmail = HttpContext.Current.Session["userEmail"] as string;
    var userName = HttpContext.Current.Session["name"] as string;
    var userImg = HttpContext.Current.Session["img"] as string;
    var userId = HttpContext.Current.Session["userId"] as string;
}
<!DOCTYPE html>
<html>

<head>

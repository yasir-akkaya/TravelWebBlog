<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

            <a href="/" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="~/Zenblog/assets/img/logo.png" alt=""> -->
                <h1>Anatolian Vibes</h1>
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Cities", "Index", "Cities")
                    </li>

                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>
                        @Html.ActionLink("Contact", "Contact", "Home")
                    </li>


                    @{ if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                @Html.ActionLink("Add Blog", "AddBlog", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("My Blogs", "MyBLogs", "User")
                            </li>
                            <li>

                                @Html.ActionLink("Profile", "EditMyProfile", "User", new { eMail = userEmail }, null)

                            </li>
                            <li>
                                @Html.ActionLink("Logout", "Logout", "User")
                            </li>
                        }
                        else
                        {
                            <li class="dropdown">
                                <a style="cursor:pointer;"><span>Login /Sign Up</span> <i class="bi bi-chevron-down dropdown-indicator"></i></a>
                                <ul>
                                    <li>
                                        @Html.ActionLink("Login", "Login", "User")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Sign Up", "SignUp", "User")
                                    </li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
            </nav><!-- .navbar -->

            <div class="position-relative">


                <a style="display:none;" href="#" class="mx-2 js-search-open"><span class="bi-search"></span></a>
                <i style="display:none;" class="bi bi-list mobile-nav-toggle"></i>

                <!-- ======= Search Form ======= -->
                <div class="search-form-wrap js-search-form-wrap" style="display:none">
                    <form action="search-result.html" class="search-form">
                        <span class="icon bi-search"></span>
                        <input type="text" placeholder="Search" class="form-control">
                        <button class="btn js-search-close"><span class="bi-x"></span></button>
                    </form>
                </div><!-- End Search Form -->
                <!-- ======= User Profile ======= -->

                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <div class="container mt-3 text-center ">
                            <div class="rounded-circle overflow-hidden mx-auto" style="width: 50px; height: 50px;">
                                <img src="@userImg" alt="Image" class="w-100 h-100 object-fit-cover">
                            </div>
                            <p>@userName</p>
                        </div>
                    }
                    else
                    {
                        <div class="container mt-3 text-center ">
                            <div class="rounded-circle overflow-hidden mx-auto" style="width: 50px; height: 50px;">
                                <img src="https://via.placeholder.com/200" alt="Image" class="w-100 h-100 object-fit-cover">
                            </div>
                            <p>Guest</p>
                        </div>
                    }

                }


                <!-- End End User Profile -->
            </div>

        </div>

    </header><!-- End Header -->

    @RenderBody()

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">

        <div class="footer-content">
            <div class="container">

                <div class="row g-5">
                    <div class="col-lg-10">
                        <h3 class="footer-heading">About Anatolian Vibes</h3>
                        <p>Discover the beauty and diversity of Turkey's 81 provinces through our blog. As passionate travelers and storytellers, we aim to bring you captivating narratives and stunning visuals that showcase the rich history, vibrant culture, and breathtaking landscapes of each region.</p>
                        <p><a href="Home/About" class="footer-link-more">Learn More</a></p>
                    </div>
                    <div class="col-8 col-lg-2">
                        <h3 class="footer-heading">Navigation</h3>
                        <ul class="footer-links list-unstyled">
                            <li>
                                @Html.ActionLink("Home", "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Cities", "Index", "Cities")
                            </li>

                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>
                                @Html.ActionLink("Contact", "Contact", "Home")
                            </li>

                        </ul>
                    </div>


                </div>
            </div>
        </div>

        <div class="footer-legal">
            <div class="container">

                <div class="row justify-content-between">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        <div class="copyright">
                            © Copyright <strong><span>ZenBlog</span></strong>. All Rights Reserved
                        </div>

                        <div class="credits">

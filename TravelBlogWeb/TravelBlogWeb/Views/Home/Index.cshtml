@{
    ViewBag.Title = "Home Page";
}

<main id="main">

    <!-- ======= Hero Slider Section ======= -->
    <section id="hero-slider" class="hero-slider">
        <div class="container-md" data-aos="fade-in">
            <div class="row">
                <div class="col-12">
                    <div class="swiper sliderFeaturedPosts">
                        <div class="swiper-wrapper">
                            <div class="swiper-slide">
                                <a href="@Url.Action("ShowBlog", "SingleBlog", new { id = @ViewBag.popularsMain[0].Id })" class="img-bg d-flex align-items-end" style="background-image: url('@ViewBag.popularsMain[0].Image');">
                                    <div class="img-bg-inner">
                                        <h2>@ViewBag.popularsMain[0].Title</h2>
                                        <p>@(ViewBag.popularsMain[0].Content.Substring(0, 160) + "...")</p>
                                    </div>
                                </a>
                            </div>

                            <div class="swiper-slide">
                                <a href="@Url.Action("ShowBlog", "SingleBlog", new { id = @ViewBag.popularsMain[1].Id })" class="img-bg d-flex align-items-end" style="background-image: url('@ViewBag.popularsMain[1].Image');">
                                    <div class="img-bg-inner">
                                        <h2>@ViewBag.popularsMain[1].Title</h2>
                                        <p>@(ViewBag.popularsMain[1].Content.Substring(0, 160) + "...")</p>
                                    </div>
                                </a>
                            </div>

                            <div class="swiper-slide">
                                <a href="@Url.Action("ShowBlog", "SingleBlog", new { id = @ViewBag.popularsMain[2].Id })" class="img-bg d-flex align-items-end" style="background-image: url('@ViewBag.popularsMain[2].Image');">
                                    <div class="img-bg-inner">
                                        <h2>@ViewBag.popularsMain[2].Title</h2>
                                        <p>@(ViewBag.popularsMain[2].Content.Substring(0, 160) + "...")</p>
                                    </div>
                                </a>
                            </div>

                            <div class="swiper-slide">
                                <a href="@Url.Action("ShowBlog", "SingleBlog", new { id = @ViewBag.popularsMain[3].Id })" class="img-bg d-flex align-items-end" style="background-image: url('@ViewBag.popularsMain[3].Image');">
                                    <div class="img-bg-inner">
                                        <h2>@ViewBag.popularsMain[3].Title</h2>
                                        <p>@(ViewBag.popularsMain[3].Content.Substring(0, 160) + "...")</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="custom-swiper-button-next">
                            <span class="bi-chevron-right"></span>
                        </div>
                        <div class="custom-swiper-button-prev">
                            <span class="bi-chevron-left"></span>
                        </div>

                        <div class="swiper-pagination"></div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Hero Slider Section -->

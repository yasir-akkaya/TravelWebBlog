                                <h2><a href="@Url.Action("ShowBlog", "SingleBlog", new { id = @ViewBag.popularsMain[5].Id })">@ViewBag.popularsMain[5].Title</a></h2>
                            </div>
                            <div class="post-entry-1">
                                <a href="single-post.html"><img src="@ViewBag.popularsMain[6].Image" alt="" class="img-fluid"></a>
                                <div class="post-meta"><span class="date">Travel</span> <span class="mx-1">&bullet;</span> <span>@ViewBag.popularsMain[6].CreationDate</span></div>
                                <h2><a href="@Url.Action("ShowBlog", "SingleBlog", new { id = @ViewBag.popularsMain[6].Id })">@ViewBag.popularsMain[6].Title</a></h2>
                            </div>
                        </div>

                        <!-- Trending Section -->
                        <div class="col-lg-4">
                            @{
                                int counter = 1;
                            }

                            <div class="trending">
                                <h3>Trending</h3>
                                <ul class="trending-post">
                                    @foreach (var item in @ViewBag.popularsAside)
                                    {
                                        <li>
                                            <a href="@Url.Action("ShowBlog", "SingleBlog", new { id = item.Id })">
                                                <span class="number">@counter</span>
                                                <h3>@item.Title</h3>
                                                <span class="author">@item.User.Name</span>
                                            </a>
                                        </li>
                                        counter++;
                                    }
                                </ul>
                            </div>
                            @{counter = 0;
                            }

                        </div> <!-- End Trending Section -->
                    </div>
                </div>

            </div> <!-- End .row -->
        </div>
    </section> <!-- End Post Grid Section -->

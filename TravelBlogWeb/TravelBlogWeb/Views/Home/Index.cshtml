                                <a href="single-post.html"><img src="@ViewBag.popularsMain[4].Image" alt="" class="img-fluid"></a>
                                <div class="post-meta"><span class="date">Business</span> <span class="mx-1">&bullet;</span> <span>@ViewBag.popularsMain[4].CreationDate</span></div>
                                <h2><a href="@Url.Action("ShowBlog", "SingleBlog", new { id = @ViewBag.popularsMain[4].Id })">@ViewBag.popularsMain[4].Title</a></h2>
                            </div>
                            <div class="post-entry-1">
